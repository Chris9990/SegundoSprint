@model IEnumerable<Gestion.Models.SubCategoria>

@{
    ViewBag.Title = "Index";
}

<h2>Subcategorias</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Codigo de SubCategoria:
        </th>
        <th>
            Nombre:
        </th>
        <th>
            Descripción:
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cod_SubCategoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_SubCategoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion_SubCategoria)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.Cod_SubCategoria  }) |
            @Html.ActionLink("Details", "Details", new {  id=item.Cod_SubCategoria  }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.Cod_SubCategoria  })
        </td>
    </tr>
}

</table>
